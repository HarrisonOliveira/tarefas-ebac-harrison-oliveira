<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

  <persistence-unit name="projeto3mod35">

    <!-- provider pode até ser omitido em Hibernate 6 -->
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

      <!-- Entidades: pode registrar manualmente ou deixar o scan automático -->
      <!-- <class>com.exemplo.modelo.Usuario</class> -->
    <properties>
        <!-- Configuração JDBC -->
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/projeto4mod35"/>
      <property name="jakarta.persistence.jdbc.user" value="admin"/>
      <property name="jakarta.persistence.jdbc.password" value="superSecreta"/>

        <!-- Propriedades Hibernate -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
